<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:textAlignment="center"
    tools:context="com.project2.anything2.se329.puzzlarm.activities.SetAlarmActivity">

    <TextView
        android:background="#0a0a12"
        android:text="12:00"
        android:textColor="#cf1313"
        android:gravity="center"
        android:textSize="150px"
        android:fontFamily="sans-serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />
    <EditText
        android:layout_width="wrap_content"
        android:textColor="@color/white_text"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:paddingBottom="75px"
        android:paddingTop="75px"
        android:inputType="time"
        android:hint="Set Time"
        android:gravity="center"
        android:textSize="125px"
        android:background="#cf1313"
        android:textColorHint="#f9f2f2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S"
        android:id="@+id/sun_button"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:id="@+id/mon_button"
        android:layout_alignBottom="@+id/sun_button"
        android:layout_toRightOf="@+id/sun_button"
        android:layout_toEndOf="@+id/sun_button"
        android:width="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T"
        android:id="@+id/tues_button"
        android:layout_alignBottom="@+id/mon_button"
        android:layout_toRightOf="@+id/mon_button"
        android:layout_toEndOf="@+id/mon_button"
        android:width="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W"
        android:id="@+id/wed_button"
        android:layout_alignBottom="@+id/tues_button"
        android:layout_toRightOf="@+id/tues_button"
        android:layout_toEndOf="@+id/tues_button"
        android:width="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T"
        android:id="@+id/thurs_button"
        android:layout_alignBottom="@+id/wed_button"
        android:layout_toRightOf="@+id/wed_button"
        android:layout_toEndOf="@+id/wed_button"
        android:width="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:id="@+id/fri_button"
        android:layout_alignBottom="@+id/thurs_button"
        android:layout_toRightOf="@+id/thurs_button"
        android:layout_toEndOf="@+id/thurs_button"
        android:width="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S"
        android:id="@+id/sat_button"
        android:layout_alignBottom="@+id/fri_button"
        android:layout_toRightOf="@+id/fri_button"
        android:layout_toEndOf="@+id/fri_button"
        android:width="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitAlarm"
        android:layout_below="@+id/tues_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />
</RelativeLayout>
